{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist/server",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "api/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "files": ["api/server.ts"],
  "include": [
    "api/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
